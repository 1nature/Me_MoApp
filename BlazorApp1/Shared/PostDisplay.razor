@using Me_MoApp
<div class="card">
    <div class="card-body">
        <p><strong>@DPost.User.FirstName</strong></p>
        <p><strong>@DPost.User.LastName</strong></p>
        <p><p><img style="width: 100px" src="@DPost.User.Picture" /></p></p>
        <p><strong>@DPost.Description</strong></p>
        <p><strong>@DPost.Categorization</strong></p>
        <p><strong>@DPost.TotalVotes</strong></p>
        <p><strong>@DPost.TimeStamp</strong></p>

        <AddCommentEntry Post="DPost"></AddCommentEntry>


        @foreach (var comment in DPost.TheComments)
        {
            <CommentDisplay Dcomment="comment"></CommentDisplay>
        }

    </div>

</div>
@code {
    [Parameter]
    public Post DPost { get; set; }
}

