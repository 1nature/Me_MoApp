@page "/postinterface"
@using BlazorApp2.Components.Shared
@using Me_MoApp
@inject Data.PostDataService pInfo
@inject Data.ApplicationDbContext dbContext
<PageTitle>PostInterface</PageTitle>


<h3 class="text-center">Post Interface</h3>


<p>

    @if (dbContext.Posts == null || !dbContext.Posts.Any())
    {
        <p>No posts found.</p>
    }
    else
    {
        @foreach (Post post in dbContext.Posts)
        {
            <PostDisplay DPost="post"></PostDisplay>
        }
    }



    
</p>



